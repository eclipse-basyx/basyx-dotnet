@model IAsset
@using BaSyx.Models.AdminShell

@if (Model != null)
{
    <div class="card border-dark mb-3">
        <div class="card-header"><h4>Asset</h4></div>
        <ul class="list-group list-group-flush">
            @await Html.PartialAsync("_IdShort", Model.IdShort)
            @await Html.PartialAsync("_Identifier", Model.Identification)
            @await Html.PartialAsync("_Description", Model.Description)
            @if (ViewData.ContainsKey("Thumbnail") && ViewData["Thumbnail"] != null)
            {
                string thumbnailSrc = ((IFileElement)ViewData["Thumbnail"]).Value;
                 <li class="list-group-item">
                    <div class="row justify-content-center align-items-center">
                        <img src="@("/files" + thumbnailSrc)" style="display:block; max-width:100%; height:auto" /> 
                    </div>
                 </li>           
            }
        </ul>        
    </div>
}